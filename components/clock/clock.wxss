.clock {
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
}
.clock text{
    color: #fff;
    font-size: 26px;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
}
.clock image {
    width: 320px;
    height: 320px;

}
.active{
    opacity: 0.9;
}